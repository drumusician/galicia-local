<!DOCTYPE html>
<html lang={assigns[:locale] || "en"}>
  <head>
    {Application.get_env(:live_debugger, :live_debugger_tags)}

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="GaliciaLocal ‚Äì Integrate into Galician Life" suffix=" ¬∑ GaliciaLocal">
      {assigns[:page_title]}
    </.live_title>

    <%!-- SEO Meta Tags --%>
    <meta name="description" content={assigns[:meta_description] || gettext("Discover local businesses, learn Galician customs, and truly integrate into your new community. Your guide to making Galicia home.")} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={"#{Application.get_env(:galicia_local, :base_url)}#{@conn.request_path}"} />

    <%!-- Open Graph --%>
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="GaliciaLocal" />
    <meta property="og:title" content={assigns[:page_title] || "GaliciaLocal ‚Äì Integrate into Galician Life"} />
    <meta property="og:description" content={assigns[:meta_description] || gettext("Discover local businesses, learn Galician customs, and truly integrate into your new community. Your guide to making Galicia home.")} />
    <meta property="og:image" content={assigns[:meta_image] || "#{Application.get_env(:galicia_local, :base_url)}/images/og-default.jpg"} />
    <meta property="og:url" content={"#{Application.get_env(:galicia_local, :base_url)}#{@conn.request_path}"} />
    <meta property="og:locale" content={if assigns[:locale] == "es", do: "es_ES", else: "en_US"} />
    <meta property="og:locale:alternate" content={if assigns[:locale] == "es", do: "en_US", else: "es_ES"} />

    <%!-- Twitter Card --%>
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={assigns[:page_title] || "GaliciaLocal ‚Äì Integrate into Galician Life"} />
    <meta name="twitter:description" content={assigns[:meta_description] || gettext("Discover local businesses, learn Galician customs, and truly integrate into your new community. Your guide to making Galicia home.")} />
    <meta name="twitter:image" content={assigns[:meta_image] || "#{Application.get_env(:galicia_local, :base_url)}/images/og-default.jpg"} />

    <%!-- Structured Data --%>
    <script type="application/ld+json">
      <%= raw(Jason.encode!(%{
        "@context" => "https://schema.org",
        "@type" => "WebSite",
        "name" => "GaliciaLocal",
        "url" => "#{Application.get_env(:galicia_local, :base_url)}",
        "description" => "Helping newcomers integrate into Galician life",
        "inLanguage" => [%{"@type" => "Language", "name" => "English", "alternateName" => "en"}, %{"@type" => "Language", "name" => "Spanish", "alternateName" => "es"}],
        "potentialAction" => %{
          "@type" => "SearchAction",
          "target" => %{"@type" => "EntryPoint", "urlTemplate" => "#{Application.get_env(:galicia_local, :base_url)}/search?q={search_term_string}"},
          "query-input" => "required name=search_term_string"
        }
      })) %>
    </script>

    <link rel="icon" type="image/png" href={~p"/favicon.png"} />
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const setTheme = (theme) => {
          if (theme === "system") {
            localStorage.removeItem("phx:theme");
            document.documentElement.removeAttribute("data-theme");
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
        };
        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem("phx:theme") || "system");
        }
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "system"));

        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));
      })();
    </script>
  </head>
  <body>
    <%= unless String.starts_with?(@conn.request_path, "/admin") do %>
      <nav class="bg-base-100/95 backdrop-blur-md shadow-sm border-b border-base-200 sticky top-0 z-40">
        <div class="container mx-auto max-w-6xl px-4 flex items-center h-14">
          <!-- Brand -->
          <div class="flex-1">
            <a
              href="/"
              class="flex items-center gap-2 text-primary hover:opacity-80 transition-opacity"
            >
              <span class="text-2xl">üêö</span>
              <span class="text-xl font-bold tracking-tight">GaliciaLocal</span>
            </a>
          </div>
          
<!-- Desktop nav -->
          <div class="hidden md:flex items-center gap-1">
            <a href="/search" class="btn btn-ghost btn-sm gap-1">
              <span class="hero-magnifying-glass w-4 h-4"></span> {gettext("Search")}
            </a>
            <a href="/cities" class="btn btn-ghost btn-sm gap-1">
              <span class="hero-map w-4 h-4"></span> {gettext("Cities")}
            </a>
            <a href="/categories" class="btn btn-ghost btn-sm gap-1">
              <span class="hero-squares-2x2 w-4 h-4"></span> {gettext("Categories")}
            </a>
            <form method="post" action="/locale" class="flex items-center">
              <input type="hidden" name="_csrf_token" value={get_csrf_token()} />
              <input type="hidden" name="locale" value={if assigns[:locale] == "es", do: "en", else: "es"} />
              <button type="submit" class="btn btn-ghost btn-xs font-bold">
                {if assigns[:locale] == "es", do: "EN", else: "ES"}
              </button>
            </form>
            <div class="divider divider-horizontal mx-1 h-6"></div>
            <%= if assigns[:current_user] do %>
              <div class="dropdown dropdown-end">
                <div tabindex="0" role="button" class="btn btn-ghost btn-sm gap-2">
                  <span class="inline-flex items-center justify-center bg-primary text-primary-content rounded-full w-6 h-6 text-xs font-medium">
                    {String.first(
                      assigns[:current_user].display_name ||
                        assigns[:current_user].email |> to_string()
                    )}
                  </span>
                  <span class="hero-chevron-down w-3 h-3"></span>
                </div>
                <ul
                  tabindex="0"
                  class="dropdown-content menu bg-base-100 rounded-box z-50 w-52 p-2 shadow-lg border border-base-200 mt-2"
                >
                  <li class="menu-title text-xs opacity-60 px-2 pt-1">
                    {assigns[:current_user].display_name || assigns[:current_user].email}
                  </li>
                  <li>
                    <a href="/profile">
                      <span class="hero-user-circle w-4 h-4"></span> {gettext("My Profile")}
                    </a>
                  </li>
                  <li>
                    <a href="/favorites">
                      <span class="hero-heart w-4 h-4"></span> {gettext("My Favorites")}
                    </a>
                  </li>
                  <li>
                    <a href="/my-businesses">
                      <span class="hero-building-storefront w-4 h-4"></span> {gettext("My Businesses")}
                    </a>
                  </li>
                  <%= if assigns[:current_user].is_admin do %>
                    <li>
                      <a href="/admin"><span class="hero-cog-6-tooth w-4 h-4"></span> {gettext("Admin")}</a>
                    </li>
                  <% end %>
                  <li></li>
                  <li>
                    <a href="/sign-out" class="text-base-content/60">
                      <span class="hero-arrow-right-start-on-rectangle w-4 h-4"></span> {gettext("Sign Out")}
                    </a>
                  </li>
                </ul>
              </div>
            <% else %>
              <a href="/sign-in" class="btn btn-ghost btn-sm">{gettext("Sign In")}</a>
              <a href="/register" class="btn btn-primary btn-sm">{gettext("Join Community")}</a>
            <% end %>
          </div>
          
<!-- Mobile hamburger -->
          <div class="md:hidden">
            <div class="dropdown dropdown-end">
              <div tabindex="0" role="button" class="btn btn-ghost btn-sm">
                <span class="hero-bars-3 w-5 h-5"></span>
              </div>
              <ul
                tabindex="0"
                class="dropdown-content menu bg-base-100 rounded-box z-50 w-56 p-2 shadow-lg border border-base-200 mt-2"
              >
                <li>
                  <a href="/search"><span class="hero-magnifying-glass w-4 h-4"></span> {gettext("Search")}</a>
                </li>
                <li><a href="/cities"><span class="hero-map w-4 h-4"></span> {gettext("Cities")}</a></li>
                <li>
                  <a href="/categories">
                    <span class="hero-squares-2x2 w-4 h-4"></span> {gettext("Categories")}
                  </a>
                </li>
                <li>
                  <form method="post" action="/locale">
                    <input type="hidden" name="_csrf_token" value={get_csrf_token()} />
                    <input type="hidden" name="locale" value={if assigns[:locale] == "es", do: "en", else: "es"} />
                    <button type="submit" class="flex items-center gap-2 w-full">
                      <span class="hero-language w-4 h-4"></span>
                      {if assigns[:locale] == "es", do: "Switch to English", else: "Cambiar a Espa√±ol"}
                    </button>
                  </form>
                </li>
                <li></li>
                <%= if assigns[:current_user] do %>
                  <li>
                    <a href="/profile">
                      <span class="hero-user-circle w-4 h-4"></span> {gettext("My Profile")}
                    </a>
                  </li>
                  <li>
                    <a href="/favorites">
                      <span class="hero-heart w-4 h-4"></span> {gettext("My Favorites")}
                    </a>
                  </li>
                  <li>
                    <a href="/my-businesses">
                      <span class="hero-building-storefront w-4 h-4"></span> {gettext("My Businesses")}
                    </a>
                  </li>
                  <%= if assigns[:current_user].is_admin do %>
                    <li>
                      <a href="/admin"><span class="hero-cog-6-tooth w-4 h-4"></span> {gettext("Admin")}</a>
                    </li>
                  <% end %>
                  <li>
                    <a href="/sign-out">
                      <span class="hero-arrow-right-start-on-rectangle w-4 h-4"></span> {gettext("Sign Out")}
                    </a>
                  </li>
                <% else %>
                  <li>
                    <a href="/sign-in">
                      <span class="hero-arrow-right-end-on-rectangle w-4 h-4"></span> {gettext("Sign In")}
                    </a>
                  </li>
                  <li>
                    <a href="/register" class="text-primary font-semibold">
                      <span class="hero-user-plus w-4 h-4"></span> {gettext("Join Community")}
                    </a>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </nav>
    <% end %>
    {@inner_content}
  </body>
</html>
